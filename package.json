{
  "name": "turborepo-starter",
  "version": "0.0.1",
  "private": true,
  "author": "Thomas Taylor (https://thmsmtylr.com)",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:library": "turbo run build:library",
    "test": "turbo run test"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "engines": {
    "node": "18.x"
  }
}
